{
  "name": "blank-contract-react",
  "private": true,
  "version": "0.1.0",
  "main": "./dest/index.js",
  "scripts": {
    "build": "yarn clean && tsc -b && webpack",
    "install:noir": "curl -L https://raw.githubusercontent.com/noir-lang/noirup/main/install | bash noirup -v 0.16.0-aztec.1",
    "install:sandbox": "docker pull aztecprotocol/aztec-sandbox:0.8.14",
    "clean": "rm -rf ./dest .tsbuildinfo",
    "start": "serve -p 3000 ./dest",
    "start:dev": "npm run serve -- --hot --live-reload --client-overlay",
    "serve": "ERRORS=true npx webpack serve --mode development --config webpack.config.ts",
    "start:sandbox": "SANDBOX_VERSION=0.8.14 /bin/bash -c \"$(curl -fsSL 'https://sandbox.aztec.network')\" ",
    "formatting": "prettier --check ./src && eslint ./src",
    "formatting:fix": "prettier -w ./src",
    "compile": "aztec-cli compile src/contracts --outdir ../artifacts --typescript ../artifacts",
    "test:integration": "NODE_NO_WARNINGS=1 node --experimental-vm-modules $(yarn bin jest) --runInBand"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "@aztec/aztec-ui": "^0.1.14",
    "@aztec/aztec.js": "^0.8.14",
    "@aztec/circuits.js": "^0.8.14",
    "@aztec/foundation": "^0.8.14",
    "@aztec/noir-contracts": "^0.8.14",
    "@aztec/types": "^0.8.14",
    "classnames": "^2.3.2",
    "formik": "^2.4.3",
    "mobx": "^6.10.2",
    "mobx-react-lite": "^4.0.5",
    "node-sass": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass-loader": "^13.3.2",
    "serve": "^14.2.1",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/html-webpack-plugin": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@babel/core": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.18.9",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.9.2",
    "eslint-webpack-plugin": "^2.5.2",
    "html-webpack-plugin": "^5.5.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "mini-css-extract-plugin": "^2.6.1",
    "babel-loader": "^8.2.5",
    "autoprefixer": "^10.4.15",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "jest": "^29.6.4",
    "postcss": "^8.4.29",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "resolve-typescript-plugin": "^2.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tty-browserify": "^0.0.1",
    "typescript": "^5.0.4",
    "util": "^0.12.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "tailwindcss": "^3.2.4",
    "webpack-dev-server": "^4.15.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dest",
    "src",
    "!*.test.*"
  ]
}
